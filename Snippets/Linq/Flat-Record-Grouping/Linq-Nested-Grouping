var dataStatus = (
from actions in StatesWithActions
group actions by actions.StatusTypesId into statusGrp
select new {
Status = statusGrp.Key,
States =	from s in statusGrp
			group s by s.State into stateGrp
			select new {
			State = stateGrp.Key,
			Actions = from action in stateGrp
			select action			
			}
			}).ToList().Dump();
			
