    <script>

    Vue.component('button-counter',{
        data: function () {
            return {
                count: 0
            }
        },
        template: '<button v-on:click="count++">You clicked me {{ count }} times.</button>'
    });

     new Vue({
            el: "#app",
            data: {
                    "name": "Mickey",
                    "age": 45,
                    "cars": [
                        { "name": "Ford", "models": ["Fiesta", "Focus", "Mustang"] },
                        { "name": "Honda", "models": ["Civic", "Accord"] }
                    ]
            }
        })
    </script>

